<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background=" #f24e1e ">

    <android.support.v7.widget.CardView
        android:id="@+id/carUpdateListaID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint=" #b7ee95 "
        app:cardCornerRadius="@dimen/place_autocomplete_powered_by_google_start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titutloUpdateLista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background=" #8bd619 "
                android:fontFamily="@font/acmesai"
                android:gravity="center"
                android:text="@string/tituloUpdateLista"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editUpdateConcepto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/editUpdateConcepto"
                android:inputType="textPersonName"
                android:textColor="@android:color/black" />

            <EditText
                android:id="@+id/editUpdateCantidad"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="@string/editUpdateCantidad"
                android:inputType="number|numberDecimal"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnUpdateLista"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/roundedbtn1"
                android:backgroundTint=" #ebf134 "
                android:text="@string/btnUpdateLista"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnOutUpdate"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/roundedbtn1"
                android:backgroundTint=" #145ea5 "
                android:text="@string/btnOutUpdate"
                android:textColor="@color/common_google_signin_btn_text_dark_pressed"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
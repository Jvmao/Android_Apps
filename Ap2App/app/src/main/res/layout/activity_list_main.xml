<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitewall6"
    android:scrollbars="vertical"
    tools:context="com.josevicente.ap2app.ShopActivities.ListMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tituloShopList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ec4559"
            android:fontFamily="@font/arcader"
            android:gravity="center"
            android:text="@string/tituloShopList"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageBtnItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/imageBtnItem"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/additem2x64" />

        <TextView
            android:id="@+id/textProductoLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/arcader"
            android:gravity="center"
            android:text="@string/textProdLista"
            android:textColor="@android:color/black" />

        <ImageButton
            android:id="@+id/imageBtnListID"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/imageBtnListID"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/lista4" />

        <TextView
            android:id="@+id/textListaCompra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/arcader"
            android:gravity="center"
            android:text="@string/textListaCompra"
            android:textColor="@android:color/black" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navShop1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="70dp"
                android:layout_weight="0"
                android:background="@android:color/background_light"
                android:soundEffectsEnabled="true"
                android:splitMotionEvents="true"
                app:layout_behavior="com.josevicente.ap2app.Utils.BottomNavigationViewBehavior"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:menu="@menu/menu_main_navigation">

            </android.support.design.widget.BottomNavigationView>

        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>

</ScrollView>

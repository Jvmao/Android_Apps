<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background=" #f3e14a ">


    <android.support.v7.widget.CardView
        android:id="@+id/cardListID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/background_light"
        app:cardCornerRadius="@dimen/place_autocomplete_progress_size">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textProductoLista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acmesai"
                android:text="@string/textProductoLista"
                android:textColor="#00134d"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textCantidadLista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/acmesai"
                android:text="@string/textCantidadLista"
                android:textColor="#009999"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/acmesai"
                    android:text="@string/textFecha"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textFechaList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/acmesai"
                    android:text="@string/textFechaList"
                    android:textStyle="italic" />

            </LinearLayout>-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageButton
                    android:id="@+id/imageEditLista"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/imageEditLista"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/pencil1x48" />

                <ImageButton
                    android:id="@+id/imageDeleteItem"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/imageDeleteImage"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/delete1x48" />
            </RelativeLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
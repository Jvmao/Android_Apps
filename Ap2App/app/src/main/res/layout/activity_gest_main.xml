<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whitewall3"
    android:nestedScrollingEnabled="true"
    app:layout_scrollFlags="scroll"
    tools:context="com.josevicente.ap2app.GestActivities.GestMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tituloAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_light"
            android:fontFamily="@font/broshk"
            android:gravity="center"
            android:text="@string/tituloAgenda"
            android:textColor="@android:color/black"
            android:textSize="30sp" />


        <ImageButton
            android:id="@+id/imageBtnMisContactos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/imageBtnMisContactos"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/contact1x512" />

        <TextView
            android:id="@+id/textMisContactos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/broshk"
            android:gravity="center"
            android:text="@string/textMisContactos"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/imageBtnMisEventos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/imageBtnMisEventos"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/agenda2x2000" />

        <TextView
            android:id="@+id/textMiAgenda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/broshk"
            android:gravity="center"
            android:text="@string/textMiAgenda"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/navGest1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="70dp"
                android:layout_weight="0"
                android:background="@android:color/background_light"
                android:soundEffectsEnabled="true"
                android:splitMotionEvents="true"
                app:layout_behavior="com.josevicente.ap2app.Utils.BottomNavigationViewBehavior"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:menu="@menu/menu_main_navigation">

            </android.support.design.widget.BottomNavigationView>

        </android.support.design.widget.CoordinatorLayout>
    </LinearLayout>


</ScrollView>

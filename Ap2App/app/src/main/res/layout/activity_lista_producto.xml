<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shopwall1"
    tools:context="com.josevicente.ap2app.ShopActivities.ListaProductoActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerListaID"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <android.support.design.widget.BottomNavigationView
                android:id="@+id/btmNavShopList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="170dp"
                android:layout_weight="0"
                android:background="@android:color/background_light"
                android:soundEffectsEnabled="true"
                android:splitMotionEvents="true"
                app:layout_behavior="com.josevicente.ap2app.Utils.BottomNavigationViewBehavior"
                app:layout_scrollFlags="scroll|enterAlways|snap"
                app:menu="@menu/menu_shop1_navigation" />

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>

</RelativeLayout>
